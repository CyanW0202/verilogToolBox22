module counter_testbench( );
reg clock;
wire a, b, c;
counter dut(
.clk(clock),
.Qc1(a),
.Qc2(b),
.Qc3(c)
);
initial begin
clock = 0;
forever #80 clock = ~clock;
end
endmodule
