// Design Name: 
// Module Name: counter_testbench
// Project Name: 
// Target Devices: 
// Tool Versions: 
// Description: 
// 
// Dependencies: 
// 
// Revision:
// Revision 0.01 - File Created
// Additional Comments:
// 
//////////////////////////////////////////////////////////////////////////////////


module counter_testbench( );
reg clock;
wire a, b, c;
counter dut(
.clk(clock),
.Qc1(a),
.Qc2(b),
.Qc3(c)
);
initial begin
clock = 0;
forever #80 clock = ~clock;
end
endmodule
