module counter(
    input clk,
    output Qc1,
    output Qc2,
    output Qc3
    );
  
    wire na, nb, nc; // input wire
        
     assign na = Qc2 & Qc3;
     assign nb = ~Qc2 + Qc3;
     assign nc = Qc1 + (Qc2&~Qc3);
     
    FFT Ta(
    .T(na),
    .clk(clk),
    .Q(Qc1)
    
    );
    
    FFT Tb(
    .T(nb),
    .clk(clk),
    .Q(Qc2)
    );
    
    FFT Tc(
    .T(nc),
    .clk(clk),
    .Q(Qc3)
    );
 
    
endmodule


//testbench

`timescale 1ns / 1ps
//////////////////////////////////////////////////////////////////////////////////
// Company: 
// Engineer: 
